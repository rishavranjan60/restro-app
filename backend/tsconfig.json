{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,              // üëç Generates .map files for easier debugging
    "noImplicitAny": true,          // Forces explicit types
    "noEmitOnError": true           // Prevents output if there are TypeScript errors
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
